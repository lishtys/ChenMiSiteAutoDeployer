/* ---------------------------------
 *        Custom Post Page
* --------------------------------- */

.post-copyright {
    font-size: 1rem;
    letter-spacing: 0.02rem;
    word-break: break-all;
    margin: 1.5rem 0 1.5rem 0;
    padding: 1rem 1rem;
    border-left: 3px solid #FF1700;
    background-color: #F9F9F9;
}

.recommend-post{
    margin: 0 0 1.5rem 0;
}


.index-category-tag{
    margin-bottom: 1rem;
    .level-item{
        display: unset;
    }
    .button.is-small {
        border-radius: 2px;
        margin-bottom: 4px;
        background-color: unset;
        font-size: .75rem;
    }
    hr {
        background-color: #f5f5f5;
        margin-top: .3rem;
        margin-bottom: .5rem;
        box-shadow: unset;
    }
}

article.article .article-meta {
    height: 41px;
}